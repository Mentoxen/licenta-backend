{
  "kind": "collectionType",
  "collectionName": "restaurants",
  "info": {
    "name": "Restaurant"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "nume": {
      "type": "string"
    },
    "city": {
      "model": "oras",
      "via": "restaurants"
    },
    "banner": {
      "collection": "file",
      "via": "related",
      "allowedTypes": [
        "files",
        "images",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    },
    "orar": {
      "type": "component",
      "repeatable": true,
      "component": "orar.orar"
    },
    "Contact": {
      "type": "component",
      "repeatable": false,
      "component": "adresa.adresa"
    },
    "descriere": {
      "type": "richtext",
      "required": false
    },
    "tags": {
      "type": "component",
      "repeatable": true,
      "component": "tags.tags"
    },
    "user": {
      "plugin": "users-permissions",
      "model": "user",
      "via": "restaurants"
    }
  }
}
